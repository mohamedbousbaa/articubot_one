<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1 "/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
<!-- BASE LINK-->
    <link name="base_link">

    </link>
<!-- CHASSIS LINK-->

    <joint name="chassis_joints" type="fixed">
        <origin xyz="-0.053 0 0"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>
    <link name="chassis">
        <visual>
            <origin xyz="0.11 0 0"/>
            <geometry>
                <box size="0.22 0.12 0.04"/>
            </geometry>
            <material name="orange"/>
        </visual>
        <collision>
            <origin xyz="0.11 0 0"/>
            <geometry>
                <box size="0.22 0.12 0.04"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.22" y="0.12" z="0.04">
            <origin xyz="0.11 0 0" rpy="0 0 0 "/>
            </xacro:inertial_box>
 
    </link>

 <!-- LEFT BACK WHEEL LINK -->
    <joint name="left_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_wheel"/>
        <origin xyz="0 0.06 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>  
    </link>

     <!-- RIGHT BACK WHEEL LINK -->
    <joint name="right_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="0 -0.06 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder> 
    </link>

    <!-- LEFT FORWARD WHEEL LINK -->
    <joint name="left_forward_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_forward_wheel"/>
        <origin xyz="0.11 0.06 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_forward_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
           
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder> 
    </link>

       <!-- RIGHT FORWARD WHEEL LINK -->
       <joint name="right_forward_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_forward_wheel"/>
        <origin xyz="0.11 -0.06 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_forward_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <cylinder radius="0.032" length="0.01"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.01" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder> 
    </link>

</robot>