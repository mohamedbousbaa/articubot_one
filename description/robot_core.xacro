<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro"  name="robot">

    <xacro:include filename="inertial_macros.xacro"/>

    <material name="white">
        <color rgba="1 1 1 1"/>
    </material>
    <material name="orange">
        <color rgba="1 0.3 0.1 1"/>
    </material>
    <material name="blue">
        <color rgba="0.2 0.2 1 1 "/>
    </material>
    <material name="black">
        <color rgba="0 0 0 1"/>
    </material>
<!-- BASE LINK-->
    <link name="base_link">

    </link>
<!-- CHASSIS LINK-->

    <joint name="chassis_joint" type="fixed">
        <origin xyz="-0.053 0 0.02"/>
        <parent link="base_link"/>
        <child link="chassis"/>
    </joint>
    <link name="chassis">
        <visual>
            <origin xyz="0.11 0 0"/>
            <geometry>
                <box size="0.22 0.12 0.08"/>
            </geometry>
            <material name="white"/>
        </visual>
        <collision>
            <origin xyz="0.11 0 0"/>
            <geometry>
                <box size="0.22 0.12 0.08"/>
            </geometry>
        </collision>
        <xacro:inertial_box mass="0.5" x="0.22" y="0.12" z="0.04">
            <origin xyz="0.11 0 0" rpy="0 0 0 "/>
        </xacro:inertial_box>

    </link>

    <gazebo reference="chassis">
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <material>Gazebo/White</material>
    </gazebo>

 <!-- LEFT BACK WHEEL LINK -->
    <joint name="left_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="left_back_wheel"/>
        <origin xyz="0 0.06 0" rpy="-${pi/2} 0 0"/>
        <axis xyz="0 0 1"/>
    </joint>

    <link name="left_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere  radius="0.032"/>
            </geometry>
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder>  
       
    </link>
    <gazebo reference="left_back_wheel">
    
        <material>Gazebo/Blue</material>
    </gazebo>

     <!-- RIGHT BACK WHEEL LINK -->
    <joint name="right_back_wheel_joint" type="continuous">
        <parent link="base_link"/>
        <child link="right_back_wheel"/>
        <origin xyz="0 -0.06 0" rpy="${pi/2} 0 0"/>
        <axis xyz="0 0 -1"/>
    </joint>

    <link name="right_back_wheel">
        <visual>
            <geometry>
                <cylinder radius="0.032" length="0.03"/>
            </geometry>
            <material name="blue"/>
        </visual>
        <collision>
            <geometry>
                <sphere  radius="0.032"/>
            </geometry>
            
        </collision>
        <xacro:inertial_cylinder mass="0.1" length="0.03" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_cylinder> 
        
    </link>
    <gazebo reference="right_back_wheel">

        <material>Gazebo/Blue</material>
    </gazebo>


    <!-- cast wheel -->
    <joint name="cast_wheel_joint" type="fixed">
        <parent link="chassis"/>
        <child link="cast_wheel"/>
        <origin xyz="0.18 0 -0.02"/>

    </joint>
    <link name="cast_wheel">
        <visual>
            <geometry>
                <sphere radius="0.032"></sphere>
            </geometry>
            <material name="black"/>
        </visual>
        <collision>
            <geometry>
                <sphere  radius="0.032"/>
            </geometry>
            <material name="black"/>
        </collision>
        <xacro:inertial_sphere mass="0.1" radius="0.032">
            <origin xyz="0 0. 0" rpy="0 0 0"/> 
        </xacro:inertial_sphere> 
    </link>
    <gazebo reference="cast_wheel">
        <mu1>0.2</mu1>
        <mu2>0.2</mu2>
        <material>Gazebo/Black</material>
    </gazebo>

 


</robot>